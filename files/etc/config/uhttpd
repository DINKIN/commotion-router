
config uhttpd 'main'
	list listen_http '0.0.0.0:80'
	list listen_https '0.0.0.0:443'
	option home '/www'
	option rfc1918_filter '0'
	option max_requests '2'
	option cert '/etc/uhttpd.crt'
	option key '/etc/uhttpd.key'
	option cgi_prefix '/cgi-bin'
	option script_timeout '300'
	option network_timeout '30'
	option tcp_keepalive '1'
	option ubus_prefix '/ubus'

config cert 'px5g'
	option days '730'
	option bits '2048'
	option country 'US'
	option state 'DC'
	option location 'Washington'
	option commonname 'Commotion'

config uhttpd 'splash'
	option home '/www/cgi-bin/splash/'
	option interpreter '.sh=/bin/ash'
	option listen_http '8082'
	option index_page 'splash.sh'
	option error_page '/splash.sh'
	option http_keepalive '0'

